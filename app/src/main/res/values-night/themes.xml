<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.PartyBankCalculator" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/mainGrey</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <style name="RvElementBase" parent="Base.Theme.PartyBankCalculator">
        <item name="background">@color/black</item>
    </style>

    <style name="RecyclerBase" parent="RvElementBase">
        <item name="android:fadingEdgeLength">32dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="TitleText" parent="Base.Theme.PartyBankCalculator">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Base.Theme.PartyBankCalculator">
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:textColor">@color/softMainColor</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@drawable/card_form</item>
    </style>

    <style name="InputLayoutStyle" parent="Base.Theme.PartyBankCalculator">
        <item name="hintTextColor">@color/secondColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="boxStrokeColor">@color/secondColor</item>
        <item name="cursorColor">@color/secondColor</item>
    </style>

    <style name="Theme.PartyBankCalculator" parent="Base.Theme.PartyBankCalculator" />

    <style name="CheckBoxStyle" parent="Base.Theme.PartyBankCalculator">
        <item name="android:textColor">@color/alternative</item>
        <item name="boxStrokeColor">@color/alternative</item>
        <item name="buttonTint">@color/alternative</item>
    </style>

    <style name="popupMenuStyle">
        <item name="android:divider">@color/mainGrey</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="popUpBackgroundStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/card_form</item>
    </style>
</resources>